<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="3dp" />
            <padding android:bottom="120dp" android:top="120dp" />
            <gradient android:endColor="#43708f" android:startColor="#8ba0bb" android:angle="90" />
            <stroke android:width="1dp" android:color="#33364252" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="@android:color/transparent" />
            <padding android:bottom="20dp" android:top="20dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <solid android:color="@android:color/transparent"/>
            <padding android:top="20dp"  android:bottom="20dp"/>
        </shape>
    </item>


    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <solid android:color="@android:color/transparent"/>
            <padding android:top="20dp"  android:bottom="20dp"/>
        </shape>
    </item>
</selector>
