<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
 
    <LinearLayout 
        android:id="@+id/dialog_container_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"  
        >
 
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:text="@string/how_often_the_program_should_be_executed_one_after_another_"
        android:textSize="25sp"/>
    </LinearLayout>

     <LinearLayout 
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"   
     >
    <EditText
        android:id="@+id/dialog_counter_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:inputType="number"
        android:layout_margin="10dp"
        android:text="1" 
        />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="@string/times">

    </TextView>
    
    </LinearLayout>
    
 <LinearLayout 
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"   
     >
         <Button
        android:id="@+id/dialogButtonNO"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="@string/cancel"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_blue_dark"
        />
         
     <Button
        android:id="@+id/dialogButtonOK"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:text="@string/start"
        android:layout_margin="5dp"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_blue_dark"

        />

 </LinearLayout>

</LinearLayout>