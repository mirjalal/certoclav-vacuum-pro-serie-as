<RelativeLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

	<LinearLayout
	    android:id="@+id/contentOfActivity"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/certoclav_navigationbar"
	    android:orientation="horizontal" >




<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="3"
    android:background="@drawable/btn_white_shadow">
                
    	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="100dp"
	            android:background="#C3D69B"
	            android:orientation="vertical" >

    	                  <TextView
    	                      android:id="@+id/program_view_programname"
    	                      android:layout_width="wrap_content"
    	                      android:layout_height="wrap_content"
    	                      android:layout_marginLeft="20dp"
    	                      android:layout_weight="1"
    	                      android:gravity="center_vertical"
    	                      android:text="FAST PROGRAM"
    	                      android:textColor="@android:color/black"
    	                      android:textSize="35dp"
    	                      android:textStyle="bold"
    	                      tools:ignore="HardcodedText" >
          
        </TextView>

	        </LinearLayout>

    	        
    	        <RelativeLayout 
    android:layout_height="match_parent"
    android:layout_width="match_parent"   
        android:background="#EBF1DE"
    >
    
    
<ListView
    android:id="@+id/program_view_list"
        android:layout_height="wrap_content"
    android:layout_width="match_parent"
>
    
</ListView>
    
    
</RelativeLayout>



    </LinearLayout>
	

	    <LinearLayout
	        android:id="@+id/program_view_container_graph"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="2"
	        android:layout_marginTop="50dp"
	         android:layout_marginRight="50dp"
	          android:layout_marginBottom="50dp"
	        android:orientation="vertical" >
    
    
   
            

		

	    </LinearLayout>
	    	    
	</LinearLayout>
    
    <include layout="@layout/certoclav_navigationbar_clear"
        android:id="@+id/certoclav_navigationbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="90dp"/>


</RelativeLayout>