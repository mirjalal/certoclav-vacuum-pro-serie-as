<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




        <RelativeLayout
            android:id="@+id/contentOfActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/navigationbar"
            android:gravity="center_horizontal"
            android:padding="15dp">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_width="550dp"
                android:layout_height="240dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:foreground="@drawable/card_foreground"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

            <EditText
                android:id="@+id/dialog_label_text_edittext_line1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:gravity="center_vertical"
                android:hint="@string/barcode"
                android:imeOptions="actionDone"
                android:maxLength="15"
                android:singleLine="true"
                android:textScaleX="1.375"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/dialog_label_text_edittext_line2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:gravity="center_vertical"
                android:hint="@string/text_line"
                android:imeOptions="actionDone"
                android:maxLength="15"
                android:singleLine="true"
                android:textScaleX="1.375"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/imageViewBarcode"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_margin="10dp" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>



    <include
        android:id="@+id/navigationbar"
        layout="@layout/certoclav_navigationbar_clear"></include>

    <Button
        android:id="@+id/menu_main_label_button_print"
        android:background="@drawable/btn_blue_shadow_clickable"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:text="@string/print" />

</RelativeLayout>







    



