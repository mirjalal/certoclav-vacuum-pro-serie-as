<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/d_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/dialog_container_text"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_cloud_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:lines="2"
                android:text="@string/certoclav_server"
                android:textColor="@android:color/black"
                android:textSize="23sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_cloud_user_new" />

            <TextView
                android:id="@+id/dialog_add_create_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:lines="2"
                android:text="@string/manual_server"
                android:textColor="@android:color/black"
                android:textSize="23sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_search_server" />

            <TextView
                android:id="@+id/dialog_add_create_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:text="@string/search_server"
                android:textColor="@android:color/black"
                android:textSize="23sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_container_text"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/dialogCertoCloudServer"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/selection_bg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/selected"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/dialogAddManually"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login"
                android:button="@null"
                android:gravity="center"
                android:text="@string/select"
                android:textColor="@android:color/black" />

            <RadioButton
                android:id="@+id/dialogFromLocalNetwork"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login"
                android:button="@null"
                android:gravity="center"
                android:text="@string/select"
                android:textColor="@android:color/black" />
        </RadioGroup>

    </LinearLayout>

</LinearLayout>