<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:src="@drawable/control_autoclave" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/monitor_text_temp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/control_values_background_left"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="STEAM 20.0  째C"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/monitor_text_media"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/control_values_background_left"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="MEDIA 20.0  째C"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/monitor_text_media_2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/control_values_background_left"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="MEDIA 20.0  째C"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/monitor_text_press"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/control_values_background_left"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="PRESS -90 kPa"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/monitor_text_h_temp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/control_values_background_left"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="MEDIA 20.0  째C"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/monitor_text_generator_press"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/control_values_background_left"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="PRESS -90 kPa"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout

        android:id="@+id/program_definition_container_graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"></LinearLayout>
</RelativeLayout>

		    
