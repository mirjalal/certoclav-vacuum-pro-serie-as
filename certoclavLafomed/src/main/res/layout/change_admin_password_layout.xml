<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_qube_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/certoclav_actionbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/add_user" />


            <LinearLayout
                android:id="@+id/register_container_edit_text_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"></LinearLayout>

            <Button
                android:id="@+id/register_button_ok"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/register_container_edit_text_items"
                android:layout_alignRight="@+id/register_container_edit_text_items"
                android:layout_below="@+id/register_container_edit_text_items"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="150dp"
                android:layout_marginRight="150dp"
                android:background="@drawable/btn_login"
                android:text="@string/register_user"
                android:textColor="@color/login_button_text_color"
                android:textSize="30sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </ScrollView>

    <include
        android:id="@+id/certoclav_actionbar"
        layout="@layout/certoclav_navigationbar_clear" />

    <ProgressBar
        android:id="@+id/register_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

</RelativeLayout>