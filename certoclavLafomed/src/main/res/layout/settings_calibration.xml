<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/parameter_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/parameter_button_apply"
            android:layout_centerInParent="true"
            android:layout_weight="1">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/parameter_temp1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offset_of_steam_sensor_c_"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/parameter_temp1_coeff1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_selector"
                    android:gravity="center"
                    android:hint="0.0"
                    android:inputType="numberSigned|numberDecimal"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/parameter_temp2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offset_of_heater_sensor_c_"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/parameter_temp2_coeff1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_selector"
                    android:gravity="center"
                    android:hint="0.0"
                    android:inputType="numberSigned|numberDecimal"
                    android:textSize="20sp" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/parameter_temp3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offset_of_steam_generator_sensor_c_"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/parameter_temp3_coeff1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_selector"
                    android:gravity="center"
                    android:hint="0.0"
                    android:inputType="numberSigned|numberDecimal"
                    android:textSize="20sp" />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/parameter_media_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offset_of_media_sensor_c_"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/parameter_media_coeff1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_selector"
                    android:gravity="center"
                    android:hint="0.0"
                    android:inputType="numberSigned|numberDecimal"
                    android:textSize="20sp" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/parameter_press_text"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/offset_of_pressure_sensor_kpa_"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/parameter_press_coeff1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/edittext_selector"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="numberSigned"
                    android:textSize="20sp" />


            </TableRow>


        </TableLayout>

        <Button
            android:id="@+id/parameter_button_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="@drawable/login_button"
            android:text="@string/apply"
            android:textColor="@color/login_button_text_color"
            android:textSize="22sp" />

    </LinearLayout>
</LinearLayout>