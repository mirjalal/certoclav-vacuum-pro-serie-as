<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">
        


		<CheckBoxPreference
    	android:key="switch_wlan"
    	android:title="@string/wifi_on_off"
    	android:defaultValue="true">	    
		</CheckBoxPreference>


		<Preference 
        android:key="button_wifi"   
        android:title="@string/manage_wifi_connections"
        android:dependency="switch_wlan">
                 
    	</Preference>
    
	


    
    	<CheckBoxPreference
    	android:key="switch_snchronization"
    	android:defaultValue="@bool/switch_snchronization_default"
    	android:title="@string/online_mode"
    	android:summary="@string/synchronize_data_with_www_certocloud_com" >
    	</CheckBoxPreference>
    	




</PreferenceScreen>