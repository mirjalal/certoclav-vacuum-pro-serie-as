<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="button_default">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/btn_blue_dark</item>
        <item name="android:capitalize">characters</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        
    </style>


    <style name="button_navigationbar_default">
        <item name="android:background">@drawable/quickaction_slider_btn_black</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:visibility">invisible</item>
        <item name="android:padding">20dp</item>
    </style>


    <style name="button_image_default">
        <item name="android:background">@drawable/quickaction_slider_btn_black</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="button_image_sidebar">
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">30dp</item>
    </style>


    <style name="button_actionbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="android:background">@drawable/quickaction_slider_btn</item>
        <item name="android:capitalize">characters</item>
        <item name="android:layout_margin">1dp</item>
    </style>



    <style name="text_statusbar_default">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="edit_text_default">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/theme_edittext</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:imeOptions">actionDone</item>
    </style>


    <style name="spinner_default">
        <item name="android:background">@drawable/theme_background_spinner</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="text_default">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">5dp</item>
    </style>

        <style name="text_default_white">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    
    <style name="text_protocol">
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>



    <style name="text_small">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">5dp</item>
    </style>



    <style name="text_default_small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">5dp</item>
    </style>



    <style name="text_statistics">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">2dp</item>
    </style>



    <style name="text_inversed">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>


    <style name="spinner_element_default">
        <item name="android:background">@drawable/theme_background_spinner</item>
    </style>




    </resources>

