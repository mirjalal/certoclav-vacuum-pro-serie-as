<?xml version="1.0" encoding="utf-8"?>

 
            
	<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@drawable/btn_white_shadow_clickable"

	>

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/bluetooth_element_image_signal">
    
       <TextView
           android:id="@+id/sterilisation_element_text_firstline"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:singleLine="true"
           android:text="CERTOCLAV MULTICONTROL"
           android:textSize="30sp"
           android:textStyle="bold"
           tools:ignore="HardcodedText" />
                              
               <TextView
                   android:id="@+id/bluetooth_element_text_secondline"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:text="Connected"
                   android:textSize="30sp"
                   tools:ignore="HardcodedText" />

</LinearLayout>

               <ImageView
                   android:id="@+id/bluetooth_element_image_signal"
                   android:layout_width="130dp"
                   android:layout_margin="20dp"
                   android:layout_height="match_parent"
				   android:layout_alignParentRight="true"
                   android:scaleType="fitStart"
                   android:src="@drawable/sigbar2" />





       
     </RelativeLayout>
	 
